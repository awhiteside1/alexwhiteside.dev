---
import type { CollectionEntry } from "astro:content";
import BentoGridItem from "../../components/bento/BentoGridItem.astro";
const url = "https://i.ytimg.com/vi/r0VgFZv7o0k/mqdefault.jpg";

type Props = {
  entry: CollectionEntry<"awesome">;
};
const talkData = Astro.props.entry.data;

const image = `https://i.ytimg.com/vi/${new URL(talkData.url).pathname.replaceAll("/", "")}/hqdefault.jpg`;
---

<BentoGridItem
  url={talkData.url}
  variant="row"
  title={talkData.name}
  description={talkData.description}>
  <img
    src={image}
    class="transition-all w-1/3 group-hover/bento:scale-105 object-cover rounded-lg shadow-md"
  />
</BentoGridItem>
