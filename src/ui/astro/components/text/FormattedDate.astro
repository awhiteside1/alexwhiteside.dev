---
interface Props {
	date: Date | string
}

let { date } = Astro.props
try {
	date = new Date(date)
	date.toISOString()
} catch (e) {
	date = new Date()
}
---

<time datetime={date.toISOString()}>
    {
        date.toLocaleDateString('en-US', {
            month: 'long',
            day: '2-digit',
            year: 'numeric',
        })
    }
</time>
