<script
    type="module"
    is:inline
    src="https://cdn.jsdelivr.net/npm/@shoelace-style/shoelace@2.15.1/cdn/components/tooltip/tooltip.js"
></script>

<sl-tooltip placement="bottom" hover>
    <div slot="content">
        <div
            class="rounded-md dark:bg-gray-600 bg-gray-100 border-2 dark:border-0 border-gray-200 p-2 prose-invert prose-xs"
        >
            <slot name="content" />
        </div>
    </div>
    <slot />
</sl-tooltip>

<style>
    sl-tooltip:not(:defined) > div[slot='content'] {
        display: none;
    }
</style>
