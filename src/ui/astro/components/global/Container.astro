---
import { sift } from 'radash'
import { cn } from '../../../utils/cn'
type Props = {
    background?: boolean
    class?: string
}
---

<div
    class={cn(
        sift([
            'mx-auto max-w-[--max-screen-width] w-full',
            Astro.props.background && 'bg-white dark:bg-black/90',
            Astro.props.class,
        ])
    )}
>
    <slot />
</div>
