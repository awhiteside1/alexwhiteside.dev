---
import Layout from '@ui/astro/layouts/Layout.astro'
import Container from '../ui/astro/components/Container.astro'
import Link from '../ui/astro/components/Link.astro'
import BentoGrid from '../ui/astro/components/bento/BentoGrid.astro'
import BentoGridItem from '../ui/astro/components/bento/BentoGridItem.astro'
import Badge from '../ui/astro/components/elements/Badge.astro'
import GradientText from '../ui/astro/components/elements/GradientText.astro'
import Prose from '@ui/astro/components/Prose.astro'
import Social from '@ui/astro/sections/Social.astro'
import { getCollection } from 'astro:content'
import { byNumber } from '@ui/utils/interval'
import TechIcon from '@ui/astro/components/elements/TechIcon.astro'

const titles = (await getCollection('titles')).toSorted(byNumber(title=>title.data.order))
---

<Layout
    title="Software Architect, Entrepreneur, Creative"
    description="Experienced software architect, entrepreneur, and creator with over 10 years bringing products from 0 to 1 and beyond in edtech, fintech, and B2B. "
>
    <Container>
        <div class="space-y-4">
            <!--<h1 class="animate text-6xl font-bold from-gray-400 to-gray-950 bg-gradient-to-br text-transparent bg-clip-text bg-300%">-->
            <GradientText color="neutral" size={6}>
                Alex Whiteside
            </GradientText>
            <ul class="flex flex-row gap-2">
                {
                    titles.map((title) => (
                        <Badge color={title.data.color} text={title.data.title} className={title.data.className}>
                                <p class="text-sm font-medium">{title.data.short}</p>
                        </Badge>
                    ))
                }
            </ul>

            <div class="space-y-16">
                <section>
                    <article class="space-y-4">
                        <span class="animate">
                            <Prose> 
                                Alex is a hands-on, technical leader  who turns ideas into robust solutions. He brings 10+ years of deep product and technical experience building financial product search tools used by millions of consumers and hundreds of enterprise clients. This wide range of  perspective  Alex  bridge  between department's  

