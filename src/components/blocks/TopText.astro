---
type Props = {
	title: string
	description: string
}

const { title, description } = Astro.props as Props
---

<div
    class="flex flex-col items-start justify-top w-full z-20 px-4 pt-4 h-fit m-1 rounded-xl">
    <h2 class="text-xl font-bold text-pink-7000">{title}</h2>
    <p class="text-base font-medium text-gray-700">{description}</p>
    <div
        class="w-full mt-2 h-[1px] bg-300% from-gray-400/30 to-gray-300/50 bg-gradient-to-r">
    </div>
</div>
