---
type Props = {
    title: string
    description: string
}

const { title, description } = Astro.props
---

<div class="flex grow"></div>
<div
    class="group-hover/bento:translate-x-2 transition duration-200 flex flex-col justify-end p-4 h-fit">
    <div
        class="font-sans font-bold text-neutral-600 dark:text-neutral-200 mb-2 mt-2">
        {title}
    </div>
    <div
        class="font-sans font-normal text-neutral-600 text-xs dark:text-neutral-300">
        {description}
    </div>
</div>
