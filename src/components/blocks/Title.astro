---
import { cn } from '../../lib/utils'
type Props = {
    text: string
    icon: string
    url?: string
}
---

<a class={cn(Astro.props.url && 'cursor-pointer')} href={Astro.props.url}>
    <div class="px-1 group flex items-center" style="opacity:1;transform:none">
        <svg viewBox="0 0 24 24" class="h-5 text-green-500 dark:text-white">
            <use xlink:href={`#${Astro.props.icon}`}></use>
        </svg>
        <div
            class="ml-3 text-sm font-bold uppercase tracking-wide text-gray-600 dark:text-green-400"
        >
            {Astro.props.text}
        </div>
        <div class="grow min-h-1"></div>
        {
            Astro.props.url && (
                <div class="text-gray-500 align-middle  flex items-center gap-1 group-hover:text-green-500 uppercase tracking-wide text-sm font-bold">
                    Details
                    <svg
                        viewBox="0 0 24 24"
                        class=" w-4 inline-flex  group-hover:translate-x-1 transition duration-300 "
                    >
                        <use xlink:href="#arrow-right" />
                    </svg>
                </div>
            )
        }
    </div>
</a>
