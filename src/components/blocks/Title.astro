---
type Props = {
    text: string
    icon: string
}
---

<div class="flex items-center space-x-3" style="opacity:1;transform:none">
    <svg viewBox="0 0 24 24" class="h-5 text-green-500 dark:text-white">
        <use xlink:href={`#${Astro.props.icon}`}></use>
    </svg>
    <div
        class="text-sm font-bold uppercase tracking-wide text-gray-600 dark:text-green-400"
    >
        {Astro.props.text}
    </div>
</div>
