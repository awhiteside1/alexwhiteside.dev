---
import Experience from './Experience.astro'
import Title from '../../blocks/Title.astro'
import ExperienceSquare from './ExperienceSquare.astro'
const content = {
    experiences: {
        organizations: [
            { name: 'Startup', icon: 'startup' },
            // { name: 'Scale-up' },
            { name: 'Enterprise', icon: 'building' },
        ],
        roles: [
            {
                name: 'Team Lead',
            },
            {
                name: 'Director of Product',
            },
            { name: 'Sr. Director of Engineering' },
            { name: 'Architect' },
        ],
        industries: [
            { name: 'FinTech' },
            { name: 'EdTech' },
            { name: 'Aerospace' },
        ],
    },
}
---

<div
    class="col-span-12 flex flex-col md:col-[span_6/-1] lg:col-[span_5/-1] row-span-1 shadow-border"
>
    <div class="px-6 py-6 space-y-4">
        <Title icon="building" text="Work Experience" />

        <div
            class="w-full flex flex-row flex-wrap gap-3 justify-between align-middle"
        >
            <div
                class="flex flex-row gap-4 items-center justify-center w-fit p-5 bg-neutral-100 dark:bg-neutral-800 rounded-xl"
            >
                <div class="bg-white rounded-lg p-4 flex-col flex">
                    <div class="text-5xl">
                        10<sup class="text-3xl">+</sup>
                    </div>
                    <div
                        class="text-base font-medium leading-tight text-center"
                    >
                        years
                    </div>
                </div>

                <ExperienceSquare
                    group="Companies Large and Small"
                    icon="building"
                />
                <ExperienceSquare group="Multiple Industries" icon="startup" />
                <ExperienceSquare group="Senior roles " icon="startup" />
            </div>

            <ExperienceSquare
                group="Companies Large and Small"
                icon="building"
            />
            <Experience
                elements={content.experiences.organizations}
                title="Size"
            />
            <Experience
                elements={content.experiences.industries}
                title="Industry"
                class="flex-wrap flex-row max-h-32"
            />
        </div>
    </div>
</div>

<div
    class="col-span-12 flex flex-col md:col-[span_6/-1] lg:col-[span_5/-1] row-span-1 -col-end-1 shadow-border"
>
    <div class="px-6 pb-6 space-y-4">
        <div
            class="w-full flex flex-wrap flex-row gap-4 justify-between align-middle"
        >
            <Experience
                elements={content.experiences.roles}
                title="Position"
                class="flex-row flex-wrap"
            />
        </div>
    </div>
</div>
