---
import Title from '../../blocks/Title.astro'
import ExperienceSquare from './ExperienceSquare.astro'
import { getWorkContent } from '../../../lib/getWorkContent'

const companies = await getWorkContent()
const even = companies.get('Even Financial')!
const moneylion = companies.get('MoneyLion')!
const birch = companies.get('Birch Finance')!
---

<div
    class="col-span-12 flex flex-col md:col-[span_7/-1] lg:col-[span_6/-1] row-span-1 shadow-border"
>
    <div class="px-4 py-4 space-y-4">
        <Title icon="building" text="Work Experience" url="/background" />

        <div
            class="w-full flex flex-row flex-wrap gap-3 justify-between align-middle"
        >
            <div
                class="grid grid-cols-2 sm:grid-cols-4 gap-3 items-stretch justify-stretch p-3 bg-neutral-100 dark:bg-neutral-800 rounded-xl"
            >
                <div
                    class="bg-white h-full aspect-square dark:bg-neutral-700 shadow-sm dark:shadow-neutral-900 flex flex-col items-center gap-2 justify-center rounded-lg p-4 text-center transition-all hover:shadow-md"
                >
                    <div class="text-4xl">
                        10<sup class="text-2xl">+</sup>
                    </div>
                    <div class="text-sm font-medium leading-tight text-center">
                        years
                    </div>
                </div>

                <ExperienceSquare
                    icon="building"
                    elements={[
                        { name: 'Startups', companies: [birch, even] },
                        { name: 'Public Companies', companies: [moneylion] },
                    ]}
                    }
                    >Large and Small Orgs
                </ExperienceSquare>
                <ExperienceSquare
                    icon="industries"
                    elements={[
                        {
                            name: 'FinTech',
                            companies: [birch, even, moneylion],
                        },
                        { name: 'EdTech' },
                        { name: 'Aerospace' },
                    ]}
                    >Multiple Industries
                </ExperienceSquare>
                <ExperienceSquare
                    icon="senior-position"
                    elements={[
                        {
                            name: 'Director of Product',
                            companies: [even],
                        },
                        {
                            name: 'Sr. Director of Engineering',
                            companies: [moneylion],
                        },
                        {
                            name: 'Architect',
                            companies: [moneylion],
                        },
                    ]}
                    >Director<sup>+</sup> Positions
                </ExperienceSquare>
            </div>
        </div>

        <div id="background-details" class="flex flex-row gap-3 items-center">
        </div>
    </div>
</div>
