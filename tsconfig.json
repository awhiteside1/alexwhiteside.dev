{
	"extends": "astro/tsconfigs/strict",
	"compilerOptions": {
		"noEmit": true,
		"strictNullChecks": true,
		"baseUrl": "./",
		"paths": {
			"@*": ["src/*"],
			"react": ["./node_modules/preact/compat"],
			"react-dom": ["./node_modules/preact/compat"],
			"react-dom/*": ["./node_modules/preact/compat/*"]
		},
		"skipLibCheck": true,
		"jsx": "react-jsx",
		"jsxImportSource": "preact"
	},
	"include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.astro"],
	"exclude": ["dist", "node_modules"]
}
