{
	"$schema": "https://biomejs.dev/schemas/1.8.2/schema.json",
	"files": {
		"ignore": [
			"node_modules/**",
			"dist/**",
			".astro/**",
			"src/hashnode/graphql/**",
			".vercel/**",
			".*/**",
			"**/*.js",
			"public/**"
		]
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"formatter": {
		"enabled": false
	},
	"javascript": {
		"formatter": {
			"enabled": false,
			"quoteStyle": "single",
			"semicolons": "asNeeded"
		}
	}
}